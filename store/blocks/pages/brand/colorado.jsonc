{
  "store.custom#page-brand-colorado": {
    "blocks": [
      "responsive-layout.desktop#page-brand-colorado",
      "responsive-layout.tablet#page-brand-colorado",
      "responsive-layout.phone#page-brand-colorado"
    ]
  },
  "responsive-layout.desktop#page-brand-colorado": {
    "children": ["flex-layout.row#page-colorado-banner", "flex-layout.row#page-brand-colorado-bg-desktop"]
  },
  "responsive-layout.tablet#page-brand-colorado": {
    "children": ["flex-layout.row#page-colorado-banner", "flex-layout.row#page-brand-colorado-bg-mobile"]
  },
  "responsive-layout.phone#page-brand-colorado": {
    "children": ["flex-layout.row#page-colorado-banner", "flex-layout.row#page-brand-colorado-bg-mobile"]
  },

  "flex-layout.row#page-brand-colorado-bg-desktop": {
    "children": ["search-result-layout.customQuery#page-colorado-desktop"]
    // "props": {
    //   "blockClass": ["bgPageCustom", "bgPageCustomSanJose"]
    // }
  },
  "flex-layout.row#page-brand-colorado-bg-mobile": {
    "children": ["search-result-layout.customQuery#page-colorado-mobile"]
    // "props": {
    //   "blockClass": ["bgPageCustom", "bgPageCustomSanJose"]
    // }
  },

  "search-result-layout.customQuery#page-colorado-desktop": {
    "props": {
      "querySchema": {
        "orderByField": "OrderByBestDiscountDESC",
        "maxItemsPerPage": 12,
        "queryField": "308",
        "mapField": "productClusterIds",
        "skusFilter": "ALL_AVAILABLE"
      }
    },
    "blocks": ["search-result-layout.desktop#page-colorado", "search-not-found-layout"]
  },
  "search-result-layout.desktop#page-colorado": {
    "children": ["flex-layout.row#banner-slider-colorado", "flex-layout.row#searchbread", "flex-layout.row#result"],
    "props": {
      "pagination": "infinite",
      "defaultGalleryLayout": "grid",
      "preventRouteChange": true,
      "blockClass": "TemplatePlpCustomgentil"
    }
  },
  "flex-layout.row#page-colorado-banner": {
    "props": {
      "fullWidth": true,
      "horizontalAlign": "center"
    },
    "children": ["list-context.image-list#page-colorado-banner"]
  },
  "list-context.image-list#page-colorado-banner": {
    "children": ["slider-layout#page-colorado-banner"],
    "props": {
      "preload": true,
      "images": [
        {
          "image": "https://orizonb2ccl.vtexassets.com/arquivos/BANNER-DESK-COLORADO-2024.jpg",
          "mobileImage": "https://orizonb2ccl.vtexassets.com/arquivos/BANNER-MOB-COLORADO-2024.jpg"
        }
      ]
    }
  },
  "slider-layout#page-colorado-banner": {
    "props": {
      "itemsPerPage": {
        "desktop": 1,
        "tablet": 1,
        "phone": 1
      },
      "infinite": true
    }
  },
  "flex-layout.row#banner-slider-colorado": {
    "props": {
      "fullWidth": true,
      "blockClass": ["BannerCarruselCustom", "StoreContainer"]
    },
    "children": ["flex-layout.col#image-slide-colorado", "flex-layout.col#carrusel-slide-colorado"]
  },
  "flex-layout.col#image-slide-colorado": {
    "props": {
      "preventVerticalStretch": true,
      "verticalAlign": "middle",
      "marginRight": 1,
      "blockClass": "BannerCarruselCustom1"
    },
    "children": ["image#image-slide-colorado"]
  },

  "image#image-slide-colorado": {
    "props": {
      "src": "https://orizonb2ccl.vtexassets.com/arquivos/COVER-COLORADO-2024.jpg",
      "maxHeight": "430px"
    }
  },
  "flex-layout.col#carrusel-slide-colorado": {
    "props": {
      "width": "70%",
      "blockClass": "BannerCarruselCustomCol2"
    },
    "children": ["flex-layout.row#carousel-banner-colorado-desk"]
  },
  "search-result-layout.customQuery#page-colorado-mobile": {
    "props": {
      "querySchema": {
        "orderByField": "OrderByBestDiscountDESC",
        "maxItemsPerPage": 12,
        "queryField": "308",
        "mapField": "productClusterIds",
        "skusFilter": "ALL_AVAILABLE"
      }
    },
    "blocks": ["search-result-layout.mobile#page-colorado", "search-not-found-layout"]
  },
  "search-result-layout.mobile#page-colorado": {
    "children": [
      "flex-layout.row#headline-banner-carousel-colorado",
      "flex-layout.row#carousel-banner-colorado-desk",
      "flex-layout.row#searchinfomobile",
      "flex-layout.row#searchbread",
      "flex-layout.row#productCountMobile",
      "flex-layout.row#fetchprevious",
      "flex-layout.row#contentmobile",
      "flex-layout.row#fetchmore",
      "search-products-count-per-page"
    ],
    "props": {
      "blockClass": "TemplatePlpCustomgentil",
      "pagination": "infinite",
      "mobileLayout": {
        "mode1": "small",
        "mode2": "normal"
      },
      "defaultGalleryLayout": "grid"
    }
  },

  "flex-layout.row#headline-banner-carousel-colorado": {
    "props": {
      "blockClass": ["StoreContainer", "HeadlineBannerCarousel"],
      "fullWidth": false
    },
    "children": ["rich-text#headline-banner-carousel-colorado"]
  },

  "rich-text#headline-banner-carousel-colorado": {
    "props": {
      "textAlignment": "CENTER",
      "textPosition": "LEFT",
      "text": "Revisa todas nuestras ofertas",
      "blockClass": "HeadlineBannerCarousel"
    }
  },

  "flex-layout.row#carousel-banner-colorado-desk": {
    "children": ["list-context.product-list#carousel-banner-colorado-desk"]
  },
  "list-context.product-list#carousel-banner-colorado-desk": {
    "blocks": ["product-summary.shelf"],
    "children": ["slider-layout#carousel-banner-colorado-desk"],
    "props": {
      "collection": "308",
      //"hideUnavailableItems": true,
      "maxItems": 10,
      "orderBy": "OrderByTopSaleDESC",
      "specificationFilters": []
    }
  },
  "slider-layout#carousel-banner-colorado-desk": {
    "props": {
      "itemsPerPage": {
        "desktop": 4,
        "tablet": 3,
        "phone": 2
      },
      "infinite": true,
      "showPaginationDots": "never",
      "fullWidth": false,
      "blockClass": "shelf"
    }
  }
}
