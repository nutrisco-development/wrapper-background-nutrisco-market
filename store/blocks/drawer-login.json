{
  "drawer#login": {
    "props": {
      "blockClass": "drawer-login"
    },
    "children": ["menu#drawer-login"],
    "blocks": ["drawer-trigger"]
  },
  "drawer-trigger": {
    "children": ["link#open-drawer"]
  },
  "link#open-drawer": {
    "props": {
      "label": "comprar_drawer",
      "displayMode": "button",
      "buttonProps": {
        "size": "small",
        "variant": "primary"
      }
    }
  },
  "login-content#1": {
    "props": {
      "isInitialScreenOptionOnly": true,
      "defaultOption": 0,
      "optionsTitle": "Elegí una opción para comenzar",
      "showPasswordVerificationIntoTooltip": true
    }
  },
  "menu#drawer-login": {
    "children": ["flex-layout.row#drawer-item-0", "flex-layout.row#drawer-item-1", "flex-layout.row#drawer-item-2"],
    "props": {
      "orientation": "vertical"
    }
  },
  "flex-layout.row#drawer-item-0": {
    "props": {},
    "children": ["image#drawer-item-0"]
  },
  "image#drawer-item-0": {
    "props": {
      "src": "https://orizonb2ccl.vtexassets.com/arquivos/LOGO-LMTD-LOGIN-2024.svg",
      "maxHeight": 70
    }
  },
  "flex-layout.row#drawer-item-1": {
    "props": {
      "fullWidth": true,
      "colSizing": "auto",
      "horizontalAlign": "center",
      "blockClass": "drawer-item-login"
    },
    "children": ["login-content#1"]
  },
  "flex-layout.row#drawer-item-2": {
    "props": {
      "fullWidth": false,
      "colSizing": "auto",
      "horizontalAlign": "center"
    },
    "children": ["rich-text#drawer-item-2"]
  },
  "rich-text#drawer-item-2": {
    "props": {
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "text": "Al ingresar al sitio de Nutrisco estás aceptando los [Términos y Condiciones](https://developers.vtex.com/vtex-developer-docs/docs/welcome)",
      "blockClass": "DrawerLoginTermsConditions"
    }
  }
}
