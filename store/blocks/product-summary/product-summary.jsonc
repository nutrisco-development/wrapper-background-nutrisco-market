    "props": {
      "type": "promotion"
    },
    "children": ["product-highlight-text#pt"]
  },
  "product-highlight-text#pt": {
    "props": {
      "message": "{highlightName}"
    }
  },

  "product-list-price#summary": {
    "props": {
      "blockClass": "summary",
      "message": "Antes: {listPriceValue}"
      ///listPriceValue
    }
  },
  "flex-layout.row#selling-price-savings": {
    "props": {
      "colGap": 2,
      "preserveLayoutOnMobile": true,
      "preventHorizontalStretch": true,
      "marginBottom": 0
    },
    "children": [
      "product-selling-price#summary"
      //"product-price-savings#summary"
    ]
  },
  "product-installments#summary": {
    "props": {
      "blockClass": "summary"
    }
  },
  "product-selling-price#summary": {
    "props": {
      "blockClass": "summary",
      "message": "{hasListPrice, select, true { oferta:  } false { precio: }} {sellingPriceWithUnitMultiplier}"
    }
  },
  "product-price-savings#summary": {
    "props": {
      "markers": ["discount"],
      "blockClass": "summary",
      "message": "ahorra: {savingsValue}âš¡"
